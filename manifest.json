{
    "name": "My Extension",
    "version": "0.1.0",
    "manifest_version": 2,
    "description": "This is for changing style",
    "icons": { "16": "icon48.png",
               "48": "icon48.png"},

    "browser_action": {
        "default_icon": "icon48.png",
        "default_popup": "popup.html",
        "default_title": "click it ~"},
    "background": { "scripts": ["popup.js"]},
    "background_page": "popup.html",
    "permissions": [ "tab", 
                     "contextMenus"]
}