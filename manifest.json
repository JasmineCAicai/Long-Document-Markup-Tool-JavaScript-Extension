{
    "name": "My Extension",
    "version": "0.1.0",
    "manifest_version": 2,
    "description": "This is for adding mark/note",
    "icons": { "16": "icon48.png",
               "48": "icon48.png"},

    "browser_action": {
        "default_icon": "icon48.png",
        "default_popup": "popup.html",
        "default_title": "click it ~"},
    
    "background_page": "popup.html",
    "content_scripts": [
        {
            "matches": ["https://*/*", "http://*/*"],
            "css": ["notestyles.css"],
            "js": ["showMark.js"]
        }
    ]
}
